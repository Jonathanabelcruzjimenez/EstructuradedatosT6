def busqueda_interpolada(lista, elemento):
    """
    Realiza una búsqueda interpolada en la lista para encontrar el elemento.

    Parámetros:
    - lista: La lista ordenada en la que se realizará la búsqueda.
    - elemento: El elemento que se está buscando.

    Devuelve:
    - La posición del elemento si se encuentra, o -1 si no está presente.
    """
    inicio = 0
    fin = len(lista) - 1

    while inicio <= fin and lista[inicio] <= elemento <= lista[fin]:
        # Fórmula para la interpolación
        posicion = inicio + int((elemento - lista[inicio]) * (fin - inicio) / (lista[fin] - lista[inicio]))

        if lista[posicion] == elemento:
            return posicion  # Elemento encontrado, devuelve la posición.
        elif lista[posicion] < elemento:
            inicio = posicion + 1
        else:
            fin = posicion - 1

    return -1  # Elemento no encontrado.

# Ejemplo de uso
mi_lista = [1, 3, 5, 7, 9, 11, 13]
elemento_a_buscar = 7

# Asegúrate de que la lista esté ordenada para que la búsqueda interpolada funcione correctamente.
mi_lista.sort()

resultado = busqueda_interpolada(mi_lista, elemento_a_buscar)

if resultado != -1:
    print(f"El elemento {elemento_a_buscar} se encuentra en la posición {resultado}.")
else:
    print(f"El elemento {elemento_a_buscar} no se encuentra en la lista.")
